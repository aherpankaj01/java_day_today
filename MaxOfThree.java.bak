import java.util.Scanner;

class MaxOfThree 
{
	public static void main(String[] args) 
	{
		
		Scanner sc= new Scanner(System.in);
		System.out.println("please enter the three number as input");
		System.out.println("please enter first num");
		int a = sc.nextInt();
		System.out.println("please enter second num");
		int b = sc.nextInt();
		System.out.println("please enter third num");
		int c = sc.nextInt();
		int result= findMaxOfThree(a,b,c);
		System.out.println("maximum of this three number is " +result);
		
		
	}
	
	public static int findMaxOfThree(int a, int b, int c) {
		int max= (a>b)?(a>c?a:c):((b>c?b:c);
		return max;
	}
}
